<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Baja-modificacion de reglas</title>

    <!-- Bootstrap core CSS-->
    <link href="./styles/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template-->
    <link href="./styles/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="./styles/vendor/fontawesome-free/css/v4-shims.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="./styles/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="./styles/css/sb-admin.css" rel="stylesheet">


    <script src="./styles/vendor/jquery/jquery.min.js"></script>
    <script src="./scripts/seleccionRegla.js"></script>

</head>

<body id="page-top">

{{>commons/header.hbs}}

<div id="wrapper">

    {{>cliente/navBar.hbs}}

    <div id="content-wrapper">

        <!-- /.container-fluid -->
        <div class="container-fluid">

            <!-- DataTables Example -->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    Seleccion de reglas
                </div>

                <div class="card-body">

                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th width="15%">Id</th>
                            <th width="20%">Dispositivo</th>
                            <th>Accion</th>
                            <th>Condici√≥n</th>
                            <th width="5%">Modificar</th>
                            <th width="5%">Borrar</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each reglas}}
                            <tr>
                                <td class="dispositivo">
                                    <input type="text" class="form-control"  value="{{id}}" name="id" disabled="true" />
                                </td>
                                <td class="dispositivo">
                                    <input type="text" class="form-control"  value="{{dispositivo}}" name="nombre" disabled="true"/>
                                </td>
                                <td class="dispositivo">
                                    <input type="text" class="form-control"  id="i-{{id}}" value="{{accion}}" name="consumo" style="display: none;"/>
                                    <select class="form-control" title="accion" name="accion" id="select-{{id}}">
                                        <option value="prenderDispositivo">Prender</option>
                                        <option value="apagarDispositivo">Apagar</option>
                                        <option value="cambiarModoAAhorro">Modo Ahorro</option>
                                        <option value="subir">Subir</option>
                                        <option value="bajar">Bajar</option>
                                    </select>
                                    <input type="text" class="form-control"  id="cantidad-{{id}}" value="{{cantidad}}" name="cantidad" />
                                </td>
                                <td>
                                    <select class="form-control" title="sensor" name="sensor" id="sensor{{id}}">
                                        <option value="SensorHumedad">Humedad</option>
                                        <option value="SensorLuz">Luz</option>
                                        <option value="SensorMovimiento">Movimiento</option>
                                        <option value="SensorTemperatura">Temperatura</option>
                                    </select>
                                    <select class="form-control" title="condicion" name="condicion" id="cond{{id}}">
                                        <option value=">">Mayor</option>
                                        <option value="=">Igual</option>
                                        <option value="<">Menor</option>
                                    </select>
                                    <input type="text" class="form-control" id="valorCondicion" placeholder="Valor a comparar" value="{{valorCondicion}}" name="valor{{id}}"/>

                                </td>
                                <td class="dispositivoModificar"><i class="fa fa-floppy-o" aria-hidden="true"></i></td>
                                <td class="dispositivoDelete"><i class="fa fa-times"></i></td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
                <!--<div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>-->
            </div>

            <!--<p class="small text-center text-muted my-5">-->
            <!--<em>More table examples coming soon...</em>-->
            <!--</p>-->

        </div>

        {{#if showAlert}}
            {{#if isSuccess}}
                <div class="alert alert-success mx-auto mt-5 card-login">
                    {{message}}
                </div>
            {{else}}
                <div class="alert alert-danger mx-auto mt-5 card-login">
                    {{message}}
                </div>
            {{/if}}
        {{/if}}

    </div>
    <!-- /.content-wrapper -->

</div>
<!-- /#wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
{{>commons/logoutModal.hbs}}

{{>commons/scripts.hbs}}


</body>

</html>
