<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Hogares</title>

    <!-- Bootstrap core CSS-->
    <link href="./styles/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template-->
    <link href="./styles/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="./styles/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="./styles/css/sb-admin.css" rel="stylesheet">

</head>

<body id="page-top">

{{>commons/header.hbs}}

<div id="wrapper">

    {{>cliente/navBar.hbs}}

    <div id="content-wrapper">

        <div class="container">
            <div class="card card-register mx-auto mt-5">
                <div class="card-header">Cargar Dispositivos</div>
                <div class="card-body">
                    <form class="form-label-group" action="/uploadFile" method="POST" enctype="multipart/form-data">

                        <div class="card-header">Dispositivo Inteligente</div>
                        <div class="form-group">
                            <input class="file" id="inputFileInteligente" name="inputFileInteligente" aria-describedby="fileHelp" placeholder="Archivo a cargar" type="file" accept=".json,.png" />
                        </div>
                        <button class="btn btn-primary btn-block" type="submit"> Subir dispositivos inteligentes </button>
                        {{#if showAlert}}
                        {{#if success}}
                            <div class="alert alert-success mx-auto mt-5 card-login">
                                <strong>iujuu!! Su archivo fue subido con exito!</strong> {{message}}
                            </div>
                        {{else}}
                            <div class="alert alert-danger mx-auto mt-5 card-login">
                                <strong>Upss!! Su archivo no pudo ser subido. Por favor, revise el formato.</strong> {{message}}
                            </div>
                        {{/if}}
                        {{/if}}

                        <br>
                        <br>

                        <div class="card-header">Dispositivo Estandard</div>
                        <div class="form-group">
                            <input class="file" id="inputFileStandard" name="inputFileStandard" aria-describedby="fileHelp" placeholder="Archivo a cargar" type="file" accept=".json,.png" />
                        </div>
                        <button class="btn btn-primary btn-block" type="submit"> Subir dispositivos estandard</button>



                    </form>
                </div>
            </div>


    </div>
    <!-- /.content-wrapper -->

</div>
<!-- /#wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
{{>commons/logoutModal.hbs}}

{{>commons/scripts.hbs}}

</body>

</html>