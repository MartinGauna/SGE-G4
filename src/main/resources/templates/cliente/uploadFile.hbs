<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Hogares</title>

    <!-- Bootstrap core CSS-->
    <link href="./styles/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template-->
    <link href="./styles/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="./styles/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="./styles/css/sb-admin.css" rel="stylesheet">

</head>

<body id="page-top">

{{>commons/header.hbs}}

<div id="wrapper">

    {{>cliente/navBar.hbs}}

    <div id="content-wrapper">

        <div class="container">
            <div class="card card-register mx-auto mt-5">
                <div class="card-header">Subir Archivo</div>
                <div class="card-body">
                    <form class="form-label-group" action="/uploadFile" method="POST" enctype="multipart/form-data">

                        <div class="form-group col-md-8 " title="tipo" id="sm">
                            <label class="radio-inline"><input name="tipo" value="int" type="radio" checked>Dispositivo
                                Inteligente</label>
                            <label class="radio-inline"><input name="tipo" value="est" type="radio">Dispositivo Estandar</label>
                        </div>

                        <div class="form-group">
                            <input class="file" id="inputFile" name="file" aria-describedby="fileHelp" placeholder="Archivo a cargar" type="file" accept=".json,.png" />
                        </div>
                        <button class="btn btn-primary btn-block" type="submit"> Subir </button>
                        {{#if showAlert}}
                            {{#if isSuccess}}
                                <div class="alert alert-success mx-auto mt-5 card-login">
                                    <strong>iujuu!!</strong> {{message}}
                                </div>
                            {{else}}
                                <div class="alert alert-danger mx-auto mt-5 card-login">
                                    <strong>Upss!!</strong> {{message}}
                                </div>
                            {{/if}}
                        {{/if}}

                    </form>
                </div>
            </div>


    </div>
    <!-- /.content-wrapper -->

</div>
<!-- /#wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
{{>commons/logoutModal.hbs}}

{{>commons/scripts.hbs}}

</body>

</html>