    <title>Alta Dispositivo</title>

    <!-- Bootstrap core CSS-->
    <link href="./styles/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template-->
    <link href="./styles/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="./styles/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="./styles/css/sb-admin.css" rel="stylesheet">

  </head>

  <body id="page-top">

    {{>commons/header.hbs}}

    <div id="wrapper">

      {{>admin/navBar.hbs}}

      <div id="content-wrapper">

        <div class="container-fluid">



          <!-- DataTables Example -->
          <div class="card mb-3">
            <div class="card-header">
              <i class="fas fa-table"></i>
              Alta de Dispositivos</div>
            <div class="card-body">


                <label class="radio-inline"><input type="radio" name="optradio" checked>Dispositivo Estandar</label>
                <br />
                <label class="radio-inline"><input type="radio" name="optradio">Dispositivo Inteligente</label>
                <br />


                <div class="col-md-6">
                <select class="form-control" name="methodology" id="sm">
                    <option value="" selected disabled>Dispositivo</option>
                    {{#each dispositivos}}
                        <option value={{nombre}}>{{nombre}}</option>
                    {{/each}}
                </select>
                </div>



                <div class="form-group" align="right">
                    <p>
                        <button class="btn btn-lg btn-primary" onclick="crearDispositivo()">Crear Dispositivo</button>
                        <button class="btn btn-lg btn-danger"  onclick="deleteMethodology()">Eliminar</button>
                    </p>
                </div>



            </div>
            <!--<div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>-->
          </div>


          <!--<p class="small text-center text-muted my-5">-->
            <!--<em>More table examples coming soon...</em>-->
          <!--</p>-->

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    {{>commons/logoutModal.hbs}}

  {{>commons/scripts.hbs}}


  </body>

</html>
